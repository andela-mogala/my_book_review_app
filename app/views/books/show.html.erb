<h1>Books#show</h1>

<div id="book-details">
  <%= render @book %>
</div>

<div class="book-actions">
  <%= render 'actions', book: @book %>
</div>


<h3>Say something about this book</h3>
<%= form_for(:review, url: book_reviews_path(@book), remote: true) do |f| %>
  <%= f.text_area :comment, size: '25x5' %> <br>
  <%= f.submit 'Post' %>
<% end %>

<h3>Other Reviews</h3>

<div id="reviews"> 
  <%= render @book.reviews %>
</div>
