<% if current_user.liked?(book) %>
  <%= link_to 'Unlike', unlike_book_path(book, current_user.like(book)), method: :delete, remote: true %>
<% else %>
  <%= link_to 'Like', like_book_path(book), method: :post, remote: true %>
<% end %>

<% if current_user == book.owner %>
  <%= link_to 'Edit', edit_book_path(book) %> |
  <%= link_to 'Delete', book_path(book), method: :delete %>
<% end %>
